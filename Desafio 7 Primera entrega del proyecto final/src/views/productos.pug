html
    head
        title() Pagina inicial
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    body
        nav
            a(href="/") Home
            a(href="/productos") Productos
        h2(style="color:red") Pagina de inicio
        div(class="container")
            if productos
                div(class="row row-cols-2")
                    each producto in productos
                        div(class="card m-2" style="width: 18rem;")
                            img(src=producto.thumbnail class="card-img-top" alt="...")
                            div(class="card-body")
                                h5(class="card-title text-center") !{producto.title}
                                p(class="card-text text-center") $: !{producto.price}
            else
                h1 No hay productos