{{#if chats}}
    <table class="table table-dark container mt-5">
        <thead>
            <tr>
                <th class="border-end border-white">Usuario</th>
                <th>Mensaje</th>
            </tr>
        </thead>
        <tbody>
            {{#each chats}}
                <tr>
                    <td class="border-end border-white">{{this.author.email}}</td>
                    <td>{{this.text}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<p>No hay Mensajes</p>
{{/if}}